<% if user_signed_in? %>
  <div class='row'>
    <div class='col-md-12' style="display: block-inline;">
      <div class='col-md-3 left-side'>
        <%=(image_tag ('/images/urbanhoelogo.png')) %>
      </div>
      <div class='col-md-9 right-side' align='right'>
        <%= link_to 'About', welcome_about_path %>
      </div>
    </div>
  </div>

  <article class='row' id="all_plants_form">
    <h1>All Edible Plants</h1>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class='col-md-12'>
        <% @plants.each do |plant| %>
          <tr id="<%= dom_id(plant) %>">
            <td><%= plant.plant_name %></td>
            <td><%= link_to 'Show', plant %> | </td>
            <td><%= link_to 'Edit', edit_plant_path(plant) %> | </td>
            <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </article>

<% else %>
  <%= render 'unauthorized.html.erb' %>
<% end %>
